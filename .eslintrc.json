{
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env" : {
        "node" : true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "prefer-const": "error",
        "no-console": 0,
        "strict": [1, "global"],
        "no-tabs": "error",
        "key-spacing": ["error", { "beforeColon": false }],
        "object-curly-spacing": ["error", "always"]
    }
}